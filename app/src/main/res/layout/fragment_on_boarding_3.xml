<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ui.splashscreen.OnBoardingFragment_3" >

    <ImageView
        android:id="@+id/img_splash_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_splash3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/headline_splash_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:text="@string/headline_splash_3"
        android:textColor="@color/grey_text_3"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/img_splash_3"
        app:layout_constraintTop_toBottomOf="@id/img_splash_3" />

    <TextView
        android:id="@+id/text_splash_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/text_splash_3"
        android:textColor="@color/grey_text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/headline_splash_3"
        app:layout_constraintTop_toBottomOf="@id/headline_splash_3" />

    <Button
        android:id="@+id/btn_join_3"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:text="@string/join_with_us"
        android:drawableEnd="@drawable/arrow_right"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        tools:ignore="RtlSymmetry"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/text_splash_3"
        app:layout_constraintStart_toStartOf="@id/text_splash_3"/>
</androidx.constraintlayout.widget.ConstraintLayout>