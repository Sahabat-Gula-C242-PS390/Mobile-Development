<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_padding_margin_16dp"
    android:scrollbars="none"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3sp"
            android:text="@string/judul_article"
            android:textColor="@color/grey_text_3"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!--        <TextView-->
<!--            android:id="@+id/date_article"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/tanggal_article"-->
<!--            android:textSize="12sp"-->
<!--            android:textColor="@color/green_primary"-->
<!--            android:layout_marginTop="12dp"-->
<!--            />-->

        <ImageView
            android:id="@+id/img_item_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="12dp"
            tools:ignore="ContentDescription,ImageContrastCheck"
            android:src="@drawable/sample_img_detail"/>

        <TextView
            android:id="@+id/tinjau_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/tinjau_article"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:id="@+id/data_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sub_judul_article"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            />

        <Button
            android:id="@+id/btn_see"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="12dp"
            android:text="@string/explore_original_article"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView >