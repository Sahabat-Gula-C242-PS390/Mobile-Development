<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    tools:context=".ui.profile.UpgradeFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/headline_upgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3sp"
            android:text="@string/upgrade_ke_premium"
            android:textColor="@color/grey_text_3"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_upgrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:letterSpacing="0.03"
            android:text="@string/text_premium"
            android:textColor="@color/grey_text"
            android:textSize="14sp"
            android:lineSpacingExtra="4sp"
            app:layout_constraintStart_toStartOf="@+id/headline_upgrade"
            app:layout_constraintTop_toBottomOf="@+id/headline_upgrade" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/text_upgrade"
            app:layout_constraintStart_toStartOf="@id/text_upgrade">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:paddingTop="12dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/img_upgrade_1"
                        android:layout_width="152dp"
                        android:layout_height="329dp"
                        android:layout_marginEnd="7dp"
                        android:background="@drawable/prem1"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/notif"
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/notifikasi_cerdas"
                        android:textColor="@color/grey_text_3"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@id/img_upgrade_1"
                        app:layout_constraintTop_toBottomOf="@id/img_upgrade_1"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/text_notif"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="2sp"
                        android:text="@string/text_notif"
                        android:textColor="@color/grey_text"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@+id/img_upgrade_1"
                        app:layout_constraintTop_toBottomOf="@id/notif" />

                    <View
                        android:id="@+id/img_upgrade_2"
                        android:layout_width="152dp"
                        android:layout_height="329dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/prem2"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@id/text_notif"
                        app:layout_constraintStart_toStartOf="@id/text_notif" />

                    <TextView
                        android:id="@+id/catat_makanan"
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/catat_makanan"
                        android:textColor="@color/grey_text_3"
                        android:layout_marginTop="24dp"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/img_upgrade_2"
                        app:layout_constraintStart_toStartOf="@id/img_upgrade_2" />

                    <TextView
                        android:id="@+id/text_catat_makanan"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="2sp"
                        android:text="@string/text_catat_makanan"
                        android:textColor="@color/grey_text"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/catat_makanan"
                        app:layout_constraintStart_toStartOf="@id/catat_makanan" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/analisis_konsumsi"
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/analisis_konsumsi"
                        android:textColor="@color/grey_text_3"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_analisis_konsumsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="2sp"
                        android:text="@string/text_analisis_konsumsi"
                        android:textColor="@color/grey_text"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/analisis_konsumsi"
                        app:layout_constraintTop_toBottomOf="@id/analisis_konsumsi" />

                    <View
                        android:id="@+id/img_upgrade_3"
                        android:layout_width="152dp"
                        android:layout_height="329dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/prem3"
                        android:layout_marginTop="14dp"
                        app:layout_constraintTop_toBottomOf="@id/text_analisis_konsumsi"
                        app:layout_constraintStart_toStartOf="@id/text_analisis_konsumsi" />

                    <TextView
                        android:id="@+id/riwayat_catatan"
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/riwayat_catatan_lengkap"
                        android:textColor="@color/grey_text_3"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@id/img_upgrade_3"
                        app:layout_constraintTop_toBottomOf="@id/img_upgrade_3"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/text_riwayat_catatan"
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="2sp"
                        android:text="@string/text_riwayat_catatan"
                        android:textColor="@color/grey_text"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/riwayat_catatan"
                        app:layout_constraintStart_toStartOf="@id/riwayat_catatan" />

                    <View
                        android:id="@+id/img_upgrade_4"
                        android:layout_width="152dp"
                        android:layout_height="329dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/prem4"
                        android:layout_marginTop="14dp"
                        app:layout_constraintTop_toBottomOf="@id/text_riwayat_catatan"
                        app:layout_constraintStart_toStartOf="@id/text_riwayat_catatan" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_upgrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="16dp"
                android:paddingBottom="10dp"
                android:text="@string/upgrade_sekarang"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry,VisualLintButtonSize" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView >