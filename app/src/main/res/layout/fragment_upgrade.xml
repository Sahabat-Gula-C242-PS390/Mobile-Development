<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_padding_margin_16dp"
    tools:context=".ui.profile.UpgradeFragment" >

    <TextView
        android:id="@+id/headline_upgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3sp"
        android:text="Upgrade ke Premium"
        android:textColor="@color/grey_text_3"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_upgrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:letterSpacing="0.03"
        android:text="@string/text_new_password"
        android:textColor="@color/grey_text"
        android:textSize="14sp"
        android:lineSpacingExtra="4sp"
        app:layout_constraintStart_toStartOf="@+id/headline_upgrade"
        app:layout_constraintTop_toBottomOf="@+id/headline_upgrade" />

    <ScrollView
        android:id="@+id/scroll_upgrade"
        android:layout_width="match_parent"
        android:layout_height="578dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_upgrade"
        app:layout_constraintStart_toStartOf="@id/text_upgrade"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_upgrade_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="7dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/upgrade_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/notif"
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="4sp"
                    android:text="Notifikasi Cerdas"
                    android:textColor="@color/grey_text_3"
                    android:layout_marginTop="24dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/img_upgrade_1"
                    app:layout_constraintStart_toStartOf="@id/img_upgrade_1"/>

                <TextView
                    android:id="@+id/text_notif"
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2sp"
                    android:text="Pengingat otomatis membantu pengguna tetap sadar akan batas konsumsi harian, jadwal makan, dan peringatan penting lainnya."
                    android:textColor="@color/grey_text"
                    android:layout_marginTop="6dp"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/notif"
                    app:layout_constraintStart_toStartOf="@id/notif"/>

                <ImageView
                    android:id="@+id/img_upgrade_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:importantForAccessibility="no"
                    android:src="@drawable/upgrade_2"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/text_notif"
                    app:layout_constraintStart_toStartOf="@id/text_notif"/>

                <TextView
                    android:id="@+id/catat_makanan"
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="4sp"
                    android:text="Pencatatan Makanan Lanjutan"
                    android:textColor="@color/grey_text_3"
                    android:layout_marginTop="24dp"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/img_upgrade_2"
                    app:layout_constraintStart_toStartOf="@id/img_upgrade_2"/>

                <TextView
                    android:id="@+id/text_catat_makanan"
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2sp"
                    android:text="Tambahkan catatan makanan dengan akses penuh ke database lengkap. Fitur pencarian memudahkan input dan manajemen konsumsi."
                    android:textColor="@color/grey_text"
                    android:layout_marginTop="6dp"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/catat_makanan"
                    app:layout_constraintStart_toStartOf="@id/catat_makanan"/>


            </androidx.constraintlayout.widget.ConstraintLayout >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/analisis_konsumsi"
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="4sp"
                    android:text="Analisis Konsumsi Mendalam"
                    android:textColor="@color/grey_text_3"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_analisis_konsumsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2sp"
                    android:text="Tambahkan catatan makanan dengan akses penuh ke database lengkap. Fitur pencarian memudahkan input dan manajemen konsumsi."
                    android:textColor="@color/grey_text"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/analisis_konsumsi"
                    app:layout_constraintTop_toBottomOf="@id/analisis_konsumsi" />


                <ImageView
                    android:id="@+id/img_upgrade_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:importantForAccessibility="no"
                    android:src="@drawable/upgrade_3"
                    android:layout_marginTop="14dp"
                    app:layout_constraintTop_toBottomOf="@id/text_analisis_konsumsi"
                    app:layout_constraintStart_toStartOf="@id/text_analisis_konsumsi"/>

                <TextView
                    android:id="@+id/riwayat_catatan"
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="4sp"
                    android:text="Riwayat Catatan Lengkap"
                    android:textColor="@color/grey_text_3"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/img_upgrade_3"
                    app:layout_constraintTop_toBottomOf="@id/img_upgrade_3"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/text_riwayat_catatan"
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2sp"
                    android:text="Akses riwayat konsumsi harian secara detailâ€”menginformasikan tren kesehatan dan pola makan sebelumnya."
                    android:textColor="@color/grey_text"
                    android:layout_marginTop="6dp"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/riwayat_catatan"
                    app:layout_constraintStart_toStartOf="@id/riwayat_catatan"/>

                <ImageView
                    android:id="@+id/img_upgrade_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:importantForAccessibility="no"
                    android:src="@drawable/upgrade_4"
                    android:layout_marginTop="14dp"
                    app:layout_constraintTop_toBottomOf="@id/text_riwayat_catatan"
                    app:layout_constraintStart_toStartOf="@id/text_riwayat_catatan"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_upgrade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="16dp"
        android:paddingBottom="10dp"
        android:text="Upgrade Sekarang"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/scroll_upgrade"
        app:layout_constraintTop_toBottomOf="@+id/scroll_upgrade"
        tools:ignore="RtlSymmetry,VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout >