<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_nutrition_found"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="22dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:strokeColor="@color/grey_outline"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/product_scan"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <TextView
                android:id="@+id/product_found"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_found"
                android:textSize="14sp"
                android:textColor="@color/grey_text_3"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent" >

                    <TableRow >
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/karbo_u0020"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/karbo_total_found"
                            android:layout_width="wrap_content"
                            android:text="@string/_12"
                            android:textColor="@color/red_high_risk"
                            android:textSize="12sp" />

                        <TextView
                            android:text="@string/g_u0020"
                            android:textColor="@color/red_high_risk"
                            android:textSize="12sp" />

                        <TextView
                            android:text="@string/protein_u0020"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/protein_total_found"
                            android:text="@string/_2"
                            android:textColor="@color/red_high_risk"
                            android:textSize="12sp" />

                        <TextView
                            android:text="@string/g_u0020"
                            android:textColor="@color/red_high_risk"
                            android:textSize="12sp" />

                        <TextView
                            android:text="@string/lemak_u0020"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/lemak_total_found"
                            android:text="@string/_2"
                            android:textColor="@color/red_high_risk"
                            android:textSize="12sp" />

                        <TextView
                            android:text="@string/g_u0020"
                            android:textColor="@color/red_high_risk"
                            android:textSize="12sp" />
                    </TableRow >
                </TableLayout >

            </LinearLayout >

        </LinearLayout >

        <TextView
            android:id="@+id/predict_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_67"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/green_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

        </TextView >

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
