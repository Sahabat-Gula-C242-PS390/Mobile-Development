<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_nutrition_found"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:strokeColor="@color/grey_outline"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/product_scan"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <TextView
                android:id="@+id/product_found_catatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_found"
                android:textSize="14sp"
                android:textColor="@color/grey_text_3"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent" >

                    <TableRow >

                        <TextView
                            android:text="@string/gula_u0020"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/gula_total_found"
                            android:text="@string/_2"
                            android:textColor="@color/red_high_risk"
                            android:textSize="12sp" />
                        <TextView
                            android:text="@string/g_u0020"
                            android:textColor="@color/red_high_risk"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/_karbo_u0020"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/karbo_total_found"
                            android:layout_width="wrap_content"
                            android:text="@string/_12"
                            android:textColor="@color/red_high_risk"
                            android:textSize="12sp" />

                        <TextView
                            android:text="@string/g_u0020"
                            android:textColor="@color/red_high_risk"
                            android:textSize="12sp" />

                        <TextView
                            android:text="@string/protein_u0020"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/protein_total_found"
                            android:text="@string/_2"
                            android:textColor="@color/red_high_risk"
                            android:textSize="12sp" />

                        <TextView
                            android:text="@string/g_u0020"
                            android:textColor="@color/red_high_risk"
                            android:textSize="12sp" />

                        <TextView
                            android:text="@string/lemak_u0020"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/lemak_total_found"
                            android:text="@string/_2"
                            android:textColor="@color/red_high_risk"
                            android:textSize="12sp" />

                        <TextView
                            android:text="@string/g_u0020"
                            android:textColor="@color/red_high_risk"
                            android:textSize="12sp" />


                    </TableRow >
                </TableLayout >

            </LinearLayout >

        </LinearLayout >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:indeterminateOnly="false"
                android:max="100"
                android:progress="100"
                app:indicatorColor="@color/green_primary"
                app:indicatorSize="60dp"
                app:trackThickness="6dp" >

            </com.google.android.material.progressindicator.CircularProgressIndicator >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/kalori_jumlah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="174"
                    android:textColor="#33691E"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                />
            </LinearLayout >
        </FrameLayout >

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
