<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lapisan untuk stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/black" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Lapisan untuk latar belakang -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/green_fill_risk" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>